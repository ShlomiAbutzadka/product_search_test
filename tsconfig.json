{
  "compilerOptions": {
    "module": "es2020",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@common/*": ["common/*"]
    }
  },
  "include": ["src/**/*.ts", "node_modules/electron"]
}